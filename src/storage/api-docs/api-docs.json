{
  "openapi": "3.0.0",
  "info": {
    "title": "WardrobeApp API",
    "description": "服管理アプリのAPI仕様書（Swagger定義）",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "Local API Server"
    }
  ],
  "paths": {
    "/clothes": {
      "get": {
        "summary": "服一覧を取得する",
        "tags": ["Clothes"],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "example": [
                  {
                    "id": 1,
                    "name": "白シャツ",
                    "category_id": 2,
                    "color": "white",
                    "size": "M",
                    "brand": "UNIQLO"
                  }
                ]
              }
            }
          }
        }
      },
      "post": {
        "summary": "服を登録する",
        "tags": ["Clothes"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "category_id": { "type": "integer" },
                  "color": { "type": "string" },
                  "size": { "type": "string" },
                  "brand": { "type": "string" }
                },
                "required": ["name", "category_id"]
              },
              "example": {
                "name": "青シャツ",
                "category_id": 1,
                "color": "blue",
                "size": "M",
                "brand": "BEAMS"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "作成成功",
            "content": {
              "application/json": {
                "example": {
                  "id": 3,
                  "name": "青シャツ",
                  "category_id": 1,
                  "color": "blue",
                  "size": "M",
                  "brand": "BEAMS"
                }
              }
            }
          }
        }
      }
    },
    "/clothes/{id}": {
      "delete": {
        "summary": "服を削除する",
        "tags": ["Clothes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "204": { "description": "削除成功（No Content）" },
          "404": { "description": "対象が存在しない場合" }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Clothes",
      "description": "服関連API"
    }
  ]
}
